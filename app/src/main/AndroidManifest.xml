<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hear2read.Gujarati">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="org.hear2read.Gujarati.Startup"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name="org.hear2read.Gujarati.FliteTtsService"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.TTS_SERVICE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.speech.tts"
                android:resource="@xml/tts_engine" />
        </service>

        <activity
            android:name="org.hear2read.Gujarati.FliteManagerActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <!--
                        <intent-filter>
                            <action android:name="android.intent.action.MAIN" />

                            <category android:name="android.intent.category.LAUNCHER" />
                        </intent-filter>
            -->
        </activity>
        <!--
                <activity
                    android:name=".DownloadVoiceData"
                    android:configChanges="orientation"
                    android:label="@string/flite_voice_manager"
                    android:theme="@android:style/Theme.Holo">
                    <intent-filter>
                        <action android:name="android.speech.tts.engine.INSTALL_TTS_DATA" />

                        <category android:name="android.intent.category.DEFAULT" />
                    </intent-filter>
                </activity>
        -->
        <activity
            android:name="org.hear2read.Gujarati.CheckVoiceData"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.speech.tts.engine.CHECK_TTS_DATA" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hear2read.Gujarati.GetSampleText"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.speech.tts.engine.GET_SAMPLE_TEXT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity-alias
            android:name=".TtsSettingsActivity"
            android:targetActivity="org.hear2read.Gujarati.FliteManagerActivity" />
        <activity-alias
            android:name=".EngineSettings"
            android:targetActivity="org.hear2read.Gujarati.FliteManagerActivity" />

        <activity
            android:name="org.hear2read.Gujarati.TTSDemoActivity"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Legacy Code for pre-ICS compatibility -->

        <activity
            android:name="org.hear2read.Gujarati.Flite"
            android:enabled="true"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.START_TTS_ENGINE" />

                <category android:name="android.intent.category.tts_engine.FLITE" />
                <category android:name="android.intent.category.tts_lang.eng.USA" />
            </intent-filter>
        </activity>

        <provider
            android:name="org.hear2read.Gujarati.providers.SettingsProvider"
            android:authorities="org.hear2read.Gujarati.providers.SettingsProvider" />

        <activity android:name="org.hear2read.Gujarati.FliteInfoActivity"
            android:label="@string/about_app"
            android:parentActivityName="org.hear2read.Gujarati.TTSDemoActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.hear2read.Gujarati.TTSDemoActivity"
                />
        </activity>
    </application>

</manifest>